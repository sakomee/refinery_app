<%= form_for [refinery, :fb_metatags_admin, @fb_metatag] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @fb_metatag,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :model_name -%>
    <%= f.text_field :model_name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :og_title -%>
    <%= f.text_field :og_title  -%>

  </div>
  
  <div class='field'>
    <%= f.label :og_type -%>
    <%= f.text_field :og_type  -%>

  </div>
  
  <div class='field'>
    <%= f.label :og_url -%>
    <%= f.text_field :og_url  -%>

  </div>
  
  <div class='field'>
    <%= f.label :og_image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :og_image_id,
               :image => @fb_metatag.og_image,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :og_site_name -%>
    <%= f.text_field :og_site_name  -%>

  </div>
  

  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:og_description].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/fb_metatags/fb_metatag", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:og_description].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  
  <div class='field'>
    <%= f.label :fb_app_id -%>
    <%= f.text_field :fb_app_id  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.fb_metatags.admin.fb_metatags.fb_metatag'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @fb_metatag.model_name) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
