<% content_for :body_content_title do %>
  <%= @fb_metatag.model_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Model Name</h1>
    <p>
      <%=raw @fb_metatag.model_name %>
    </p>
  </section>
  <section>
    <h1>Og Title</h1>
    <p>
      <%=raw @fb_metatag.og_title %>
    </p>
  </section>
  <section>
    <h1>Og Type</h1>
    <p>
      <%=raw @fb_metatag.og_type %>
    </p>
  </section>

  
  <section>
    <h1>Og Description</h1>
    <p>
      <%=raw @fb_metatag.og_description %>
    </p>
  </section>
  
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="fb_metatags">
      <% @fb_metatags.each do |fb_metatag| %>
        <li>
          <%= link_to fb_metatag.model_name, refinery.fb_metatags_fb_metatag_path(fb_metatag) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
